<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Chroma" Version="0.3.1-alpha" />
  </ItemGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageId>ChromaSynth</PackageId>
    <Authors>Hacktix</Authors>
    <Description>ChromaSynth is an extension to the Chroma Framework allowing for audio synthesis at runtime.</Description>
    <Copyright>Copyright 2020 Â© Hacktix</Copyright>
    <Version>1.0.0</Version>
    <PackageTags>audio;synthesis;synth;chroma;gamedev;game;netcore</PackageTags>
  </PropertyGroup>

</Project>
